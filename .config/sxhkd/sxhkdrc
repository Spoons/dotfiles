# firefox
super + alt + b
	firefox

# emacs
super + alt + e
	kitty --class emacs --name emacs emacsclient -nw

# thunderbird
super + alt + m
	thunderbird

# signal
super + alt + c
	signal-desktop

# ranger
super + alt + f
	kitty ranger

# ncmpcpp
super + alt + p
	kitty --class ncmpcpp --name ncmpcpp ncmpcpp

# pulse audio control panel
super + alt + a
	pavucontrol

# xprop
super + alt + i
	notify-send "$(xprop | grep 'CLASS')"

# play
super + alt + v
	kitty --class play --name play play

# Show Help
super + slash
	rofi-sxhkd-help

# terminal emulator
super + Return
	kitty

# password manager
super + p
	rofi-passmenu

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && \
	bspc node -n last.!automatic || bspc node last.leaf -n focused

# dwm esq master-slave. swap the current node and the biggest window
super + d
	bspc node -s biggest.window.local || bspc node -s last.local

# show all hidden
super + u
	while bspc node any.hidden.window -g hidden=off; do :; done

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspwm-next {next,prev}

# program launcher
super + @space
	rofi -combi-modi window,drun,run -show combi -modi combi

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; \
	notify-send "sxhkd config reloaded"

# quit bspwm normally
super + alt + Escape
	bspc quit

# restart bspwm
super + shift + r
	bspc wm -r

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# set the window state: tiled, ps, float, full
super + {a, shift + a, z, v}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags: mark, lock, stick, private
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# focus the node in the given direction
super + {_,shift + }{h,t,n,s}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

#focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# hide current node
super + i
	bspc node -g hidden

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# focus the next/previous node in the same window
super + {comma,period}
	bspc node -f {next,prev}.local

# preselect the direction
super + ctrl + {h,t,n,s}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# expand a window by moving one of its side outward
super + alt + {h,t,n,s}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,t,n,s}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# change gap
super + {equal,minus}
	bspc config window_gap $(( $(bspc config window_gap) {+,-} 5 ))

# rotate all windows
super + ctrl + {Left,Right,Up,Down}
	bspc node @focused:/ --rotate {270,90,180,180}

# audio next prev play
XF86Audio{Next,Prev,Play}
	mpc {next,prev,toggle}

# raise lower volume
XF86Audio{Raise,Lower}Volume
	pamixer -{i,d} 10 && \
	bspwm-open -v && \
	polybar-msg hook mvol 1

# mute volume
XF86AudioMute
	pamixer --toggle-mute && polybar-msg hook mvol 1

# Control the Brightness
XF86MonBrightness{Up,Down}
	bspwm-open -d && \
	brightnessctl --exponent=4 s 5%{+,-}

# full screenshot
Print
	maim --delay=3 --quiet -u | tee "$HOME/media/screenshot/Screenshot_$(date +%F_%H-%M-%S).png" | xclip -sel clipboard -t image/png && notify-send "üìÅ Screenshot saved"

# selection mark screenshot
shift + Print
	maim --delay=3 --quiet -u -s | tee "$HOME/media/screenshot/Screenshot_$(date +%F_%H-%M-%S).png" | xclip -sel clipboard -t image/png && notify-send "üìÅ Screenshot saved"

# lock screen
super + shift + x
	betterlockscreen -l
